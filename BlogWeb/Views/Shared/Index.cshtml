@model IEnumerable<BlogWeb.Models.ApplicationUser>

<h1>Список пользователей</h1>

<table class="table">
    <thead>
        <tr>
            <th>Имя пользователя</th>
            <th>Email</th>
            <th>Отображаемое имя</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.DisplayName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id">Подробности</a> |
                    <a asp-action="Edit" asp-route-id="@user.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Создать нового пользователя</a>